<h1>User info</h1>
<table>
  <tbody>
    <tr>
      <th><%= attachment_image_tag @user, :profile_image, format: "jpeg", fallback: "no_image.jpg", size: "130x130" %></th>
    </tr>
    <tr>
      <th>name <%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction <%= @user.introduction %></th>
    </tr>
    <% if @user.id == current_user.id %>
      <th><%= link_to "編集", edit_user_path(@user) %></th>
    <% end %>
  </tbody>
</table>

<h1>New book</h1>
<%= form_with model: @newbook, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Option</h4>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
<% end %>


<h1>Books</h1>
<table class='table'>
    <thead>
      <tr>
        <th>Title</th>

        <th>Option</th>
      </tr>
    </thead>

    <tbody>

      <tr>
        <td><%= @book.title %></td>

        <td><%= @book.body %></td>
      </tr>

    </tbody>
</table>
