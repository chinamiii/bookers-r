<h1>User info</h1>
<table>
  <tbody>
    <tr>
      <th><%= attachment_image_tag @user, :profile_image, format: "jpeg", fallback: "no_image.jpg", size: "130x130" %></th>
    </tr>
    <tr>
      <th>name <%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction <%= @user.introduction %></th>
    </tr>
    <% if @user.id == current_user.id %>
      <th><%= link_to "編集", edit_user_path(@user) %></th>
    <% end %>
  </tbody>
</table>

<h1>New book</h1>
<%= form_with model: @book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Option</h4>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
<% end %>


<h1>Books</h1>

  <table class='table'>
    <thead>
      <tr>
        <th>Title</th>

        <th>Option</th>
      </tr>
    </thead>

    <tbody>

     <% @books.each do |book| %>

      <tr>
        <td>
          <%= link_to user_path(book.user_id) do %>
            <%= attachment_image_tag book.user, :profile_image, format: "jpeg", fallback: "no_image.jpg", size: "40x40" %>
          <% end %>
        </td>
        <td>
          <%= link_to book_path(book.id) do %>
            <%= book.title %>
          <% end %>
        </td>

        <td><%= book.body %></td>
      </tr>
     <% end %>
    </tbody>
  </table>

