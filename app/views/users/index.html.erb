<h1>Users</h1>

  <table class='table'>
    <thead>
      <tr>
        <th>image</th>

        <th>name</th>
      </tr>
    </thead>

    <tbody>
     <% @users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag user, :profile_image, format: "jpeg", fallback: "no_image.jpg", size: "40x40" %></td>

        <td><%= user.name %></td>
      </tr>
     <% end %>
    </tbody>
  </table>
