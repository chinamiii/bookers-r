<h1>User info</h1>
<%= form_with model:@user, local:true do |f| %>

  <label for="inputName">Name</label>
  <p><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></p>
  
  <label for="inputImage">Image</label>
  <p><%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %></p>

  <label for="inputName">Introduction</label>
  <p><%= f.text_field :introduction, autofocus: true %></p>

  <%= f.submit "変更を保存" %>
<% end %>